---
// Main landing page - prerender as static for GitHub Pages
export const prerender = true;
---

<html lang="en" class="light">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>SPECTRA | Modular AI-Powered Data Pipelines</title>
  <link
    rel="stylesheet"
    href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600&display=swap"
  />
  <link rel="stylesheet" href="/src/styles/global.css" />
  <style>
    * {
      font-family: 'Inter', -apple-system, BlinkMacSystemFont, sans-serif;
    }
    
    html {
      scroll-behavior: smooth;
    }
    
    /* Theme variables */
    .light {
      --bg-primary: #ffffff;
      --bg-secondary: #f8fafc;
      --bg-accent: #dbeafe;
      --text-primary: #1f2937;
      --text-secondary: #6b7280;
      --border-color: #e5e7eb;
      --header-bg: #0969da;
      --header-text: #ffffff;
    }
    
    .dark {
      --bg-primary: #1f2937;
      --bg-secondary: #374151;
      --bg-accent: #1e3a8a;
      --text-primary: #f9fafb;
      --text-secondary: #d1d5db;
      --border-color: #4b5563;
      --header-bg: #1e40af;
      --header-text: #f9fafb;
    }
    
    body {
      background-color: var(--bg-primary);
      color: var(--text-primary);
      transition: background-color 0.3s ease, color 0.3s ease;
    }
    
    .nav-link {
      position: relative;
      transition: all 0.2s ease;
      font-weight: 500;
      font-size: 14px;
      color: var(--header-text);
    }
    
    .nav-link:hover {
      color: #dbeafe;
    }
    
    .nav-link.active {
      color: #dbeafe;
    }
    
    .nav-link.active::after {
      content: "";
      position: absolute;
      bottom: -4px;
      left: 0;
      width: 100%;
      height: 2px;
      background-color: #dbeafe;
      border-radius: 1px;
    }
    
    .btn-primary {
      background-color: #1a7f37;
      border: 1px solid #1a7f37;
      color: white;
      transition: all 0.2s ease;
    }
    
    .btn-primary:hover {
      background-color: #2da44e;
      border-color: #2da44e;
    }
    
    .btn-secondary {
      background-color: transparent;
      border: 1px solid var(--border-color);
      color: var(--text-primary);
      transition: all 0.2s ease;
    }
    
    .btn-secondary:hover {
      background-color: var(--bg-secondary);
      border-color: var(--border-color);
    }
    
    .theme-toggle {
      background: transparent;
      border: 1px solid rgba(255, 255, 255, 0.3);
      color: var(--header-text);
      padding: 0.5rem;
      border-radius: 0.375rem;
      cursor: pointer;
      transition: all 0.2s ease;
      font-size: 14px;
    }
    
    .theme-toggle:hover {
      background: rgba(255, 255, 255, 0.1);
      border-color: rgba(255, 255, 255, 0.5);
    }
    
    .section-light-blue {
      background-color: var(--bg-accent);
      background-opacity: 0.1;
    }
  </style>
</head>

<body class="min-h-screen">

<!-- Header -->
<header class="bg-spectra-blue text-white py-3 px-6 sticky top-0 z-50" style="background-color: var(--header-bg); color: var(--header-text);">
  <div class="max-w-6xl mx-auto flex justify-between items-center">
    <div class="flex items-center space-x-3">
      <img
        src="https://github.com/SPECTRADataSolutions/framework/blob/main/assets/images/spectraLogo.png?raw=true"
        alt="SPECTRA Logo"
        class="h-8 w-8"
      />
      <h1 class="text-xl font-semibold">
        SPECTRA
      </h1>
    </div>
    <nav>
      <ul class="flex items-center space-x-6">
        <li>
          <a href="/vision" class="nav-link">
            Vision
          </a>
        </li>
        <li>
          <a href="/contact" class="nav-link">
            Contact
          </a>
        </li>
        <li>
          <button class="theme-toggle" onclick="toggleTheme()" title="Toggle theme">
            <span class="theme-icon">üåô</span>
          </button>
        </li>
        <li>
          <a
            href="/login"
            class="btn-primary px-4 py-2 rounded-md text-sm font-medium"
          >
            Sign In
          </a>
        </li>
      </ul>
    </nav>
  </div>
</header>

<!-- Main Content -->
<main>
  <!-- Hero Section -->
  <section class="py-24 px-6 text-center" style="background-color: var(--bg-primary);">
    <div class="max-w-4xl mx-auto">
      <div class="mb-8">
        <img
          src="https://github.com/SPECTRADataSolutions/framework/blob/main/assets/images/spectraLogo.png?raw=true"
          alt="SPECTRA Logo"
          class="mx-auto mb-6 h-16 w-16"
        />
        <h1 class="text-5xl font-semibold mb-4 tracking-tight" style="color: var(--text-primary);">
          SPECTRA
        </h1>
        <p class="text-xl mb-8 max-w-2xl mx-auto leading-relaxed" style="color: var(--text-secondary);">
          Modular AI-powered data pipelines for Microsoft Fabric. 
          Democratizing enterprise-grade data capabilities for organizations of every size.
        </p>
      </div>
      
      <div class="flex justify-center space-x-4">
        <a
          href="/vision"
          class="btn-primary px-6 py-3 rounded-md font-medium text-sm"
        >
          Learn About Our Vision
        </a>
        <a
          href="/contact"
          class="btn-secondary px-6 py-3 rounded-md font-medium text-sm"
        >
          Get in Touch
        </a>
      </div>
    </div>
  </section>

  <!-- Simple Value Proposition -->
  <section class="py-16 px-6 section-light-blue" style="background-color: var(--bg-secondary);">
    <div class="max-w-4xl mx-auto text-center">
      <h2 class="text-2xl font-medium mb-6" style="color: var(--text-primary);">
        Simplifying Data Automation
      </h2>
      <div class="grid md:grid-cols-2 gap-8">
        <div class="p-6">
          <h3 class="font-medium mb-3" style="color: var(--text-primary);">For Growing Businesses</h3>
          <p class="text-sm leading-relaxed" style="color: var(--text-secondary);">
            Affordable, plug-and-play solutions that scale with your growth. 
            No enterprise complexity, just results.
          </p>
        </div>
        <div class="p-6">
          <h3 class="font-medium mb-3" style="color: var(--text-primary);">For Large Enterprises</h3>
          <p class="text-sm leading-relaxed" style="color: var(--text-secondary);">
            Comprehensive, scalable architecture with advanced governance 
            and enterprise-grade security.
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA Footer -->
  <section class="py-16 px-6 text-center" style="background-color: var(--bg-primary);">
    <div class="max-w-2xl mx-auto">
      <h2 class="text-2xl font-medium mb-4" style="color: var(--text-primary);">
        Ready to Transform Your Data Infrastructure?
      </h2>
      <p class="mb-8" style="color: var(--text-secondary);">
        Start your journey with SPECTRA's modular data pipeline platform.
      </p>
      <a
        href="/login"
        class="btn-primary px-8 py-3 rounded-md font-medium"
      >
        Get Started
      </a>
    </div>
  </section>
</main>

<script>
  function toggleTheme() {
    const html = document.documentElement;
    const themeIcon = document.querySelector('.theme-icon');
    
    if (html.classList.contains('light')) {
      html.classList.remove('light');
      html.classList.add('dark');
      themeIcon.textContent = '‚òÄÔ∏è';
      localStorage.setItem('theme', 'dark');
    } else {
      html.classList.remove('dark');
      html.classList.add('light');
      themeIcon.textContent = 'üåô';
      localStorage.setItem('theme', 'light');
    }
  }
  
  // Initialize theme on page load
  document.addEventListener('DOMContentLoaded', function() {
    const savedTheme = localStorage.getItem('theme') || 'light';
    const html = document.documentElement;
    const themeIcon = document.querySelector('.theme-icon');
    
    html.classList.remove('light', 'dark');
    html.classList.add(savedTheme);
    themeIcon.textContent = savedTheme === 'dark' ? '‚òÄÔ∏è' : 'üåô';
  });
</script>
</body>
</html>
