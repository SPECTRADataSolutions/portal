// spectraSite.astro
// SPECTRA Landing Page â€” Built with Astro + Tailwind CSS

---
import spectra from '../spectra.colors.js';
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>SPECTRA | Modular AI-Powered Pipelines</title>
    <link rel="stylesheet" href="/src/styles/global.css" />
  </head>
  <body class="bg-spectra-smoke text-spectra-ink font-sans">
    <!-- Hero Section -->
    <section class="bg-spectra-dark text-spectra-cloud py-20 px-6 text-center">
      <h1 class="text-5xl font-bold tracking-tight">SPECTRA</h1>
      <p class="text-xl mt-4">Modular AI-powered data pipelines for Microsoft Fabric</p>
      <a href="#engine" class="inline-block mt-6 px-6 py-3 bg-spectra-blue hover:bg-spectra-orange text-white rounded-lg shadow-lg transition">See it in Action</a>
    </section>

    <!-- Trusted By -->
    <section class="bg-spectra-cloud py-10 px-6 text-center">
      <p class="uppercase text-sm tracking-wide text-spectra-blue mb-4">Trusted by</p>
      <div class="flex justify-center gap-12 grayscale opacity-80">
        <img src="/logos/dxc.svg" alt="DXC" class="h-10" />
        <img src="/logos/valantic.svg" alt="Valantic" class="h-10" />
        <img src="/logos/lloyds.svg" alt="Lloyds Bank" class="h-10" />
      </div>
    </section>
<!-- Spectra Engine -->
<section id="engine" class="py-20 px-6 bg-spectra-cloud">
  <div class="max-w-5xl mx-auto text-center">
    <h2 class="text-3xl font-bold text-spectra-blue mb-4">The SPECTRA Engine</h2>
    <p class="text-lg text-spectra-ink mb-8">Designed to automate every stage of your data lifecycle.</p>
    <div class="grid grid-cols-2 md:grid-cols-3 gap-6 text-left">
      <div class="bg-white p-4 rounded shadow">
        <h3 class="font-bold text-spectra-blue">Source</h3>
        <p class="text-sm mt-2">Secure connection to any API, app or source system.</p>
      </div>
      <div class="bg-white p-4 rounded shadow">
        <h3 class="font-bold text-spectra-blue">Prepare</h3>
        <p class="text-sm mt-2">Ingest, checkpoint and validate control tables.</p>
      </div>
      <div class="bg-white p-4 rounded shadow">
        <h3 class="font-bold text-spectra-blue">Extract</h3>
        <p class="text-sm mt-2">Smart extract logic with schema awareness and paging.</p>
      </div>
      <div class="bg-white p-4 rounded shadow">
        <h3 class="font-bold text-spectra-blue">Clean</h3>
        <p class="text-sm mt-2">Flatten, restructure, rename and timestamp.</p>
      </div>
      <div class="bg-white p-4 rounded shadow">
        <h3 class="font-bold text-spectra-blue">Transform</h3>
        <p class="text-sm mt-2">Model-ready formats for semantic layers and BI tooling.</p>
      </div>
      <div class="bg-white p-4 rounded shadow">
        <h3 class="font-bold text-spectra-blue">Refine</h3>
        <p class="text-sm mt-2">Optimise for cost, scale, performance and storage class.</p>
      </div>
      <div class="bg-white p-4 rounded shadow">
        <h3 class="font-bold text-spectra-blue">Analyse</h3>
        <p class="text-sm mt-2">Power BI, Fabric, semantic KPIs and AI triggers.</p>
      </div>
    </div>
  </div>
</section>


    <!-- CTA Footer -->
    <section class="bg-spectra-blue text-white py-12 px-6 text-center">
      <h2 class="text-2xl font-semibold mb-4">Ready to see the SPECTRA effect?</h2>
      <a href="#" class="inline-block px-6 py-3 bg-spectra-gold hover:bg-spectra-orange text-spectra-ink rounded-lg shadow-md transition">Book a Demo</a>
    </section>
  </body>
</html>
