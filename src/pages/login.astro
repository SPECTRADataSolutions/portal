---
export const prerender = true;
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Sign In | SPECTRA Data Solutions</title>
    <link rel="stylesheet" href="/src/styles/global.css" />
  </head>
  <body class="bg-spectra-smoke min-h-screen">
    <header class="bg-spectra-blue text-white py-4 px-6">
      <div class="max-w-5xl mx-auto flex justify-between items-center">
        <div class="flex items-center">
          <img
            src="https://github.com/SPECTRADataSolutions/framework/blob/main/assets/images/spectraLogo.png?raw=true"
            alt="SPECTRA Logo"
            class="h-8 mr-3"
          />
          <h1 class="text-xl font-bold" style="font-family: 'Poppins', sans-serif;">
            SPECTRA
          </h1>
        </div>
        <nav>
          <ul class="flex space-x-6 items-center">
            <li>
              <a href="/" class="hover:text-spectra-gold transition-colors">
                Home
              </a>
            </li>
          </ul>
        </nav>
      </div>
    </header>

    <main class="py-20 px-6">
      <div class="max-w-md mx-auto bg-white rounded-lg shadow-md p-8">
        <h2 class="text-2xl font-bold text-spectra-blue mb-6 text-center">
          Sign In to SPECTRA
        </h2>
        
        <div class="text-center text-spectra-ink mb-6">
          <p class="mb-4">
            Authentication is currently unavailable on the static version of this site.
          </p>
          <p class="text-sm">
            For full access to the dashboard and authentication features, please contact us directly.
          </p>
        </div>

        <div class="space-y-4">
          <a
            href="/contact"
            class="w-full block text-center px-4 py-2 bg-spectra-blue text-white rounded-lg hover:bg-spectra-orange transition"
          >
            Contact Us
          </a>
          <a
            href="/"
            class="w-full block text-center px-4 py-2 border border-spectra-blue text-spectra-blue rounded-lg hover:bg-spectra-blue hover:text-white transition"
          >
            Back to Home
          </a>
        </div>
      </div>
    </main>
  </body>
</html>