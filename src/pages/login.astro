export const prerender = true;
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Sign In | SPECTRA Data Solutions</title>
    <link
      rel="stylesheet"
      href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600&display=swap"
    />
    <link rel="stylesheet" href="/src/styles/global.css" />
    <style>
      * {
        font-family: 'Inter', -apple-system, BlinkMacSystemFont, sans-serif;
      }
      
      .btn-primary {
        background-color: #1a7f37;
        border: 1px solid #1a7f37;
        color: white;
        transition: all 0.2s ease;
      }
      
      .btn-primary:hover {
        background-color: #2da44e;
        border-color: #2da44e;
      }
      
      .btn-secondary {
        background-color: transparent;
        border: 1px solid #d0d7de;
        color: #24292f;
        transition: all 0.2s ease;
      }
      
      .btn-secondary:hover {
        background-color: #f6f8fa;
        border-color: #d0d7de;
      }
    </style>
  </head>
  <body class="bg-spectra-smoke min-h-screen">
    <!-- Header -->
    <header class="bg-white border-b border-spectra-sky py-4 px-6">
      <div class="max-w-6xl mx-auto flex justify-between items-center">
        <div class="flex items-center space-x-3">
          <img
            src="https://github.com/SPECTRADataSolutions/framework/blob/main/assets/images/spectraLogo.png?raw=true"
            alt="SPECTRA Logo"
            class="h-8 w-8"
          />
          <h1 class="text-xl font-semibold text-spectra-ink">
            SPECTRA
          </h1>
        </div>
        <nav>
          <ul class="flex items-center space-x-8">
            <li>
              <a href="/" class="text-spectra-ink hover:text-blue-600 font-medium text-sm transition-colors">
                Home
              </a>
            </li>
          </ul>
        </nav>
      </div>
    </header>
            </li>
          </ul>
        </nav>
      </div>
    </header>

    <main class="py-20 px-6">
      <div class="max-w-md mx-auto bg-white rounded-lg border border-gray-200 p-8">
        <div class="text-center mb-8">
          <img
            src="https://github.com/SPECTRADataSolutions/framework/blob/main/assets/images/spectraLogo.png?raw=true"
            alt="SPECTRA Logo"
            class="mx-auto mb-4 h-12 w-12"
          />
          <h2 class="text-2xl font-semibold text-spectra-ink mb-2">
            Sign In to SPECTRA
          </h2>
          <p class="text-gray-600 text-sm">
            Authentication is currently unavailable on the static version.
          </p>
        </div>
        
        <div class="space-y-4">
          <a
            href="/contact"
            class="btn-primary w-full block text-center px-4 py-3 rounded-md font-medium text-sm"
          >
            Contact Us for Access
          </a>
          <a
            href="/"
            class="btn-secondary w-full block text-center px-4 py-3 rounded-md font-medium text-sm"
          >
            Back to Home
          </a>
        </div>
        
        <div class="mt-6 text-center">
          <p class="text-xs text-gray-500">
            For full dashboard access, please reach out to our team directly.
          </p>
        </div>
      </div>
    </main>
  </body>
</html>