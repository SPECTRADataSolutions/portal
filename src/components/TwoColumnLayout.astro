---
export interface Props {
  leftTitle?: string;
  rightTitle?: string;
}

const { 
  leftTitle = "Our Solutions", 
  rightTitle = "Why Choose SPECTRA?" 
} = Astro.props;
---

<section class="py-16 px-6 bg-spectra-cloud">
  <div class="max-w-6xl mx-auto">
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-12">
      <!-- Left Column -->
      <div>
        <h2 class="text-3xl font-bold text-spectra-blue mb-6">{leftTitle}</h2>
        <slot name="left" />
      </div>
      
      <!-- Right Column -->
      <div>
        <h2 class="text-3xl font-bold text-spectra-blue mb-6">{rightTitle}</h2>
        <slot name="right" />
      </div>
    </div>
  </div>
</section>